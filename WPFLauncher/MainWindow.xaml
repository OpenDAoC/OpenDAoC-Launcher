<Window x:Name="LauncherWindow" x:Class="WPFLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Atlas Launcher" Height="200" Width="300" ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        FontSize="9" HorizontalAlignment="Stretch">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />

        </Grid.ColumnDefinitions>
        <Button x:Name="PlayButton" Grid.Column="2" Content="Update" HorizontalAlignment="Left" Height="29"
                Margin="12,121,0,0" VerticalAlignment="Top" Width="72" Click="playButton_Click" ClickMode="Release"
                Background="#FFDDDDDD" IsDefault="True" />

    </Grid>
</Window>