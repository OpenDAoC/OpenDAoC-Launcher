<Window x:Class="WPFLauncher.BreadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFLauncher"
        mc:Ignorable="d"
        Title="OpenDAoC Bakery" Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/bread.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label x:Name="breadLabel" Grid.Row="0" Grid.Column="0" Content="bread" HorizontalAlignment="center" Margin="0,0,0,0" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="30" Foreground="Magenta" TextBlock.FontWeight="Bold" />

    </Grid>
</Window>
